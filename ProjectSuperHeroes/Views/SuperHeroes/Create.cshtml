@model ProjectSuperHeroes.Models.SuperHeroes.Superhero

@{
    ViewBag.Title = "SuperHeroes";
    Layout = "_Layout";
}

<h2>Create New Superhero</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SuperheroName" class="control-label"></label>
        <input asp-for="SuperheroName" class="form-control" />
        <span asp-validation-for="SuperheroName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WeightKg" class="control-label"></label>
        <input asp-for="WeightKg" class="form-control" />
        <span asp-validation-for="WeightKg" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HeightCm" class="control-label"></label>
        <input asp-for="HeightCm" class="form-control" />
        <span asp-validation-for="HeightCm" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="superpowers">Choose Superpowers:</label>
        <div class="container">
            <div class="row">
                @for (int i = 0; i < ViewBag.AvailablePowers.Count; i++)
                {
                    <div class="col-md-4">
                        <div class="form-check">
                            <input
                                type="checkbox"
                                id="power-@ViewBag.AvailablePowers[i].Id"
                                name="selectedPowers"
                                value="@ViewBag.AvailablePowers[i].Id"
                                class="form-check-input" />
                            <label
                                for="power-@ViewBag.AvailablePowers[i].Id"
                                class="form-check-label">
                                @ViewBag.AvailablePowers[i].PowerName
                            </label>
                        </div>
                    </div>
                    @if ((i + 1) % 3 == 0 && i + 1 < ViewBag.AvailablePowers.Count)
                    {
                        <div class="row"></div>
                    }
                }
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary" id="add">Create</button>
</form>
<style>
    #add{
        margin-bottom: 60px;
        margin-top: 30px;
    }
</style>