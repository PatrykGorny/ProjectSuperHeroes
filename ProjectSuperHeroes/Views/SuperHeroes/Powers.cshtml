@model IEnumerable<ProjectSuperHeroes.Models.SuperPowerViewModel>

<div class="hero-container">
    <h3>Hero Name</h3>
    <h1>@ViewBag.HeroName</h1>

    <h3>Powers</h3>
    <table class="table">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PowerName)</th>
            <th>Number of heroes with the same power</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PowerName</td>
                <td>@item.OccurrenceCount</td>
            </tr>
        }
        </tbody>
    </table>

    <a asp-controller="SuperHeroes" asp-action="SuperHeroes" class="back-button">Back to Hero List</a>
</div>

<style>
    h1{
        font-family: 'Arial', sans-serif;
        color: #FF5733;
        
        font-weight: bold;
    }
    .hero-container {
        text-align: center;
        margin-top: 20px;
    }

    .power-list {
        list-style-type: none;
        padding: 0;
    }

    .power-list li {
        margin: 5px 0;
    }

    .back-button {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .back-button:hover {
        background-color: #0056b3;
    }
</style>
