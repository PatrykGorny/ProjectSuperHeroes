@model IEnumerable<ProjectSuperHeroes.Models.SuperPowerViewModel>

@{
    ViewBag.Title = "SuperHeroes";
    Layout = "_Layout";

    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
}

<h1>SuperPowers</h1>



<table class="table">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.PowerName)</th>
        <th>Number of heroes with the same power</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PowerName</td>
            <td>@item.OccurrenceCount</td>
        </tr>
    }
    </tbody>
</table>


<div class="pagination-container">
    <ul class="pagination">
        @if (currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="SuperHeroes" asp-route-page="1">First</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-action="SuperHeroes" asp-route-page="@(currentPage - 1)">Previous</a>
            </li>
        }
        
        @for (int i = 1; i <= totalPages; i++)
        {
            if (i == currentPage)
            {
                <li class="page-item active"><span class="page-link">@i</span></li>
            }
            else if (i <= 3 || i > totalPages - 3 || (i >= currentPage - 1 && i <= currentPage + 1))
            {
                <li class="page-item">
                    <a class="page-link" asp-action="SuperHeroes" asp-route-page="@i">@i</a>
                </li>
            }
            
            else if (i == 4 && currentPage > 5)
            {
                <li class="page-item disabled"><span class="page-link">...</span></li>
            }
            else if (i == totalPages - 3 && currentPage < totalPages - 4)
            {
                <li class="page-item disabled"><span class="page-link">...</span></li>
            }
        }
        
        @if (currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="SuperHeroes" asp-route-page="@(currentPage + 1)">Next</a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-action="SuperHeroes" asp-route-page="@totalPages">Last</a>
            </li>
        }
    </ul>
</div>

<style>
    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .pagination {
        display: inline-flex;
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .pagination .page-item {
        margin: 0 5px;
    }

    .pagination .page-link {
        display: inline-block;
        padding: 8px 12px;
        text-decoration: none;
        color: #007bff;
        border: 1px solid #ddd;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

    .pagination .page-link:hover {
        background-color: #f8f9fa;
        text-decoration: none;
    }

    .pagination .page-item.active .page-link {
        background-color: #007bff;
        color: white;
        border-color: #007bff;
    }

    .pagination .page-item.disabled .page-link {
        color: #6c757d;
        background-color: transparent;
        border-color: transparent;
        cursor: default;
    }
    #btn-green {
        background: green; 
       
    }
    #btn-green:hover {
        background: darkgreen;
       
    }
</style>


